<p id="notice"><%= notice %></p>

<h1>Classement des joueurs</h1>

<hr/><h3>Effectuer une recherche</h3>
<%= form_tag(players_path, method: :get) do %>
  <div class="field">
    Mot-clé cherché dans le pseudo et l'e-mail des joueurs :
    <%= text_field_tag :keyword, params[:keyword], size: '30', placeholder: 'Aucun mot-clé' %>
  </div>
  <div class="actions">
    <%= submit_tag 'Rechercher', name: nil %>
  </div>
<% end %><br/>
<%= link_to 'Annuler la recherche', players_path %><br/><br/>
<hr/><br/>

<table>
  <thead>
    <tr>
      <th>Pseudo</th>
      <th>E-mail</th>
      <th>Atelier géomatique</th>
      <th>Atelier génie civil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.pseudo %></td>
        <td><%= player.email %></td>
        <td><%= player.score_geo %></td>
        <td><%= player.score_gci %></td>
        <td><%= link_to 'Voir', player %></td>
        <td><%= link_to 'Modifier', edit_player_path(player) %></td>
        <td><%= link_to 'Supprimer', player, method: :delete, data: { confirm: 'Etes-vous sûr ? Attention : La suppression de ce joueur est irréversible.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un nouveau joueur', new_player_path %>
